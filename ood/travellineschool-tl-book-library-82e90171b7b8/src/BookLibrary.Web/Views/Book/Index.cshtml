@{
    @model DetailPageViewModel
    ViewData["Title"] = Model.BookInfo.Book.Name;
}

<div class="container">

    @Html.Partial("_detail_book", Model)

    <div class="row">
        <h3 class="book__title">Книги, которые вам могут понравиться: </h3>
        @foreach (var bookInfo in Model.SimilarBooksInfos)
        {
            <div class="col-lg-2 col-md-4 col-sm-12 col-12">
                @Html.Partial("_sample_book", bookInfo)
            </div>
        }
    </div>

    @Html.Partial("_new_review", Model.BookInfo.Book.Id)

    <div class="row">
        <h3 class="book__title">Отзывы: </h3>
        @foreach (var review in Model.Reviews)
        {
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                @Html.Partial("_review", review)
            </div>
        }
    </div>

</div>
